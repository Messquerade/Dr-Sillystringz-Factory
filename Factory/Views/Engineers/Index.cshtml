@{
  Layout = "_Layout";
}
@using Factory.Models

<h1>Engineers</h1>

@if (Model.Count == 0)
{
  <p>There are no current engineers at the factory.</p>
}

<p>
  @foreach (Engineer engineer in Model)
  {
    @Html.ActionLink($"{engineer.Name}", "Details", new {id = engineer.EngineerId})<br>
  }
</p>
<p>@Html.ActionLink("Add a New Engineer", "Create")</p>