@{
  Layout = "_Layout";
}
@using Factory.Models

<h1>Machines</h1>

@if (Model.Count == 0)
{
  <p>There are no current machines at the factory.</p>
}

<p>
  @foreach (Machine machine in Model)
  {
    @Html.ActionLink($"{machine.Type}", "Details", new {id = machine.MachineId})<br>
  }
</p>
<p>@Html.ActionLink("Add a New Machine", "Create")</p>